---
interface BoardMember {
  name: string;
  role: string;
  description: string;
  image: string;
}

const boardMembers: BoardMember[] = [
  {
    name: "Fields Marshall",
    role: "Co-Founder",
    description:
      "Fields has been blessed to call Bozeman home for the past 28 years. Having moved from Northern Montana State University, it became clear that this was her place to call home. Graduating with a degree in Management, Erica spent 21 years working in the banking industry and in 2020 she opened an office of Guild Mortgage...",
    image: "/img/fieldsmarshall.jpg",
  },
  {
    name: "Tim Olson",
    role: "Co-Founder",
    description:
      "Tim Olson, MPH, LCSW, is a psychotherapist in private practice and owns Ridgeline Counseling Service in Bozeman, MT. His comprehensive approach and philosophy toward wellness include a variety of integrative health practices...",
    image: "/img/timolson.jpg",
  },
];
---

<section class="pt-8">
  <div class="px-6 sm:px-8 md:px-12 lg:px-16 xl:px-24 2xl:px-32 py-12">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center text-green-600">Leadership</h2>
      <div class="mt-8 space-y-10">
        {
          boardMembers.map((member) => (
            <div class="group flex flex-col md:flex-row items-center md:items-start md:space-x-8">
              <div class="w-full md:w-1/4 overflow-hidden rounded-lg">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-48 md:h-60 object-cover object-center transform transition-transform duration-300 group-hover:scale-105"
                />
              </div>
              <div class="w-full md:w-3/4">
                <h3 class="text-lg font-bold text-green-700">{member.name}</h3>
                <p class="italic ">{member.role}</p>
                <p class=" mt-2">{member.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
